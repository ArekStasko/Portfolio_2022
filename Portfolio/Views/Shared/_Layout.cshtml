<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Portfolio</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Portfolio.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/bootstrap-icons.css" />
</head>
<body class="bg-dark">
    <header>
        <nav class="navbar display-4 navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow fixed-top">
            <div class="container-fluid">
                <div class="main_blue rounded-3 px-3 py-2 fs-5 mx-3">
                <span class="navbar-brand mx-1">
                    <i class="bi bi-book"></i>
                </span>
                <span class="text-light">ArekStasko</span>
                </div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item mx-3">
                            <a class="nav-link text-light fs-5" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item mx-3">
                            <a class="nav-link text-light fs-5" asp-area="" asp-controller="Posts" asp-action="Index">Posts</a>
                        </li>
                         <li class="nav-item mx-3">
                            <a class="nav-link text-light fs-5" asp-area="" asp-controller="Home" asp-action="AboutMe">About Me</a>
                         </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="d-flex justify-content-center">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top position-fixed fixed-bottom footer text-muted bg-dark">
        <div class="container text-light px-5">
            &copy; 2022 - Portfolio - 
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
